<Window x:Class="Поздравление.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Поздравление"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None"  Height="350" Width="525" Icon="Resources/unnamed.ico">
        

    <Window.Background>
        <ImageBrush ImageSource="Resources/maxresdefault.jpg" TileMode="None" Stretch="Fill" />
    </Window.Background>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid >
            <Button Margin="60,0,0,21" HorizontalAlignment="Left" Width="115" FontFamily="Thimes New Roman" FontSize="11" FontStyle="Italic" Cursor="Hand" Click="Button_Click" Height="30" VerticalAlignment="Bottom">
                Остановить музыку
            </Button>
        </Grid>
    </ScrollViewer>

</Window>
